<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvTestPozhenzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/tvForegroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvTestPozhenzi"/>

    <TextView
            android:id="@+id/tvBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvForegroundColor"/>

    <TextView
            android:id="@+id/tvRelativeSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvBackgroundColor"/>

    <TextView
            android:id="@+id/tvStyleSpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvRelativeSize"/>

    <TextView
            android:id="@+id/tvOnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvStyleSpan"/>

    <TextView
            android:id="@+id/tvChaolianjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvOnClick"/>

</android.support.constraint.ConstraintLayout>